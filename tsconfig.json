{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": ["esnext"],
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "moduleResolution": "node",
        "outDir": "scripts",
        "removeComments": false,
        "allowJs": true,
        "checkJs": false,
        "useDefineForClassFields": true,
        "noImplicitReturns": true
        // "noImplicitAny": true
    },
    "include": ["src"]
}
